# Security headers for Netlify/Vercel deployment
# These headers enforce HTTPS and prevent common security vulnerabilities

/*
  # Force HTTPS
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  
  # Prevent clickjacking
  X-Frame-Options: DENY
  
  # Prevent MIME type sniffing
  X-Content-Type-Options: nosniff
  
  # Enable XSS protection
  X-XSS-Protection: 1; mode=block
  
  # Referrer policy for privacy
  Referrer-Policy: strict-origin-when-cross-origin
  
  # Permissions policy (disable unnecessary features)
  Permissions-Policy: camera=(), microphone=(), geolocation=(), interest-cohort=()
  
  # Content Security Policy
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.googletagmanager.com https://pagead2.googlesyndication.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob: https:; font-src 'self' data:; connect-src 'self' https://www.google-analytics.com; frame-src 'none'; object-src 'none'; base-uri 'self'; form-action 'self'; upgrade-insecure-requests;

# Cache static assets
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Don't cache HTML
/*.html
  Cache-Control: public, max-age=0, must-revalidate
